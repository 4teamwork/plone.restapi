<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:plone="http://namespaces.plone.org/plone">

  <plone:service
    method="GET"
    for="Products.CMFCore.interfaces.ISiteRoot"
    factory=".get.RegistryGet"
    name="registry_"
    permission="zope2.View"
    />

  <plone:service
    method="PUT"
    for="Products.CMFCore.interfaces.ISiteRoot"
    factory=".update.RegistryUpdate"
    name="registry_"
    permission="zope2.View"
    />

</configure>
